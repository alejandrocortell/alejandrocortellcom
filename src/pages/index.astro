---
import Layout from "@/layouts/Layout.astro";
import { t, changeLanguage } from "i18next";
import "./styles.css";
import LanguageSelector from "../components/languageSelector/LanguageSelector.astro";
import Experience from "@/components/experience/Experience.astro";
import Header from "@/components/header/Header.astro";
import Description from "@/components/description/Description.astro";
import Title from "@/components/title/Title.astro";
import Knowledge from "@/components/knowledge/Knowledge.astro";
import Footer from "@/components/footer/Footer.astro";
import BottomBar from "@/components/bottomBar/BottomBar.astro";

changeLanguage("en");
---

<Layout>
  <LanguageSelector />
  <div class='wrapper'>
    <Header />
    <Description />

    <Title title={t('title-experience')} />
    <Experience />

    <Title title={t('title-knowledge')} />
    <Knowledge />

    <Footer />
    <BottomBar />
  </div>
</Layout>
